html , body {
  height:100%;
  font-family: sans-serif;
}

body, h1, h2, h3, h4, h5, p {
  margin:0em;
}

body { 
  background-color:#FFFFFF; /*#F0F0F0;*/
 }

#titlebar {
  text-align:center;
  background-color:#1F6B75;
  color:#FF7A00;
  position:relative;
  width:100%;
  z-index:100;
  margin-bottom:1em;
}

.recom_box {
  position:relative;
  z-index:1;
  margin:1em;
  padding:0.7em;
  border-width:0.2em;
  border-color:#A3B6BF;
  border-style:solid;
  border-radius:0.3em;
  margin-right:19em;
}

.recom_title {
  position:relative;
}

.recom_logo {
  position:relative;
  margin-top :1em;
  margin-left:0em;
  margin-bottom:0em;
  margin-right:1em;
  height:6em;
  width:8em;
  background-color:#AAAAAA;
  float:left;
  z-index:10;
}

.recom_logo_container {
  display: inline-block;
  position: relative;
  width: 20%;
  float:left;
  margin-top :1em;
  margin-left:0em;
  margin-bottom:0em;
  margin-right:1em;
  /*margin: 0 25%;*/
  /*float:left;*/
}
.recom_logo_dummy {
  padding-top: 75%; /* 4:3 aspect ratio */
}
.recom_logo_element {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color:#AAAAAA;
}

.recom_description {
  position:relative;
  margin:1em;
  z-index:9;
}

#watching {
  position:relative;
  width:16em;
  margin:1em;
  float:right;
}

#watching_title {
  position:relative;
  margin-bottom:1em;
}

#watching_wrapper {
  width:14em;
  height:11em;
  position:relative;
  right:0em;
  /*float:right;*/
  margin:1em;
}

#watching_container {
  overflow:hidden;
  position:absolute;
  top:0em;
  right:0em;
  height:9em;
  width:12em;
  z-index:10;
  background-color:#F0F0F0;
  border-width:1em;
  border-color:#A3B6BF;
  border-style:solid;
  border-radius:1em;
  box-shadow: 0.5em 0.5em 0.5em #808080;
}

#watching_logo_background {
  position:absolute;
  top:0em;
  right:0em;
  height:9em;
  width:12em;
  z-index:10;
  background-color:#F0F0F0;
 
}

#watching_container:hover {
  width:46.125em; /*39.5em;*/
  height:18em;
}

#watching_select {
  margin:0;
  padding:0;
  position:absolute;
  top:0em;
  left:0em;
  width:34.125em; /*27.5em;*/
  height:18em;
  overflow:auto;
  background-color:#A3B6BF;
}

.testlogo {
  position:relative;
  width:6em;
  height:4.5em;
  background-color:#F0F0F0;
  margin:0.0625em;
  border-width:0.25em;
  border-color:#F0F0F0;
  border-style:outset;
  float:left;
}

#watching_logo {
  right:0;
  position:absolute;
  height:1em;
  width:1.333em;
  line-height:1em;
  color:#1F6B75;
  font-size:9em;
  text-align:center;
  animation-name: turning_logo;
  animation-duration: 10s;
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;
}

@keyframes turning_logo {
  0% {transform:scaleX(1);}
  5% {transform:scaleX(-1);}
  10% {transform:scaleX(1);}
  100% {transform:scaleX(1);}
}

#watching_description {
  position:relative;
}

#container {
  display: inline-block;
  position: relative;
  width: 50%;
  /*margin: 0 25%;*/
  float:left;
  margin-bottom:1em;
}
#dummy {
  padding-top: 75%; /* 4:3 aspect ratio */
}
#element {
  position:absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color:#AAAAAA;
  z-index:10;
}

#selector {
  position:absolute;
  top:0;
  right:0;
  width:100%;
  height:100%;
  z-index:9;
}

#element:hover ~ #selector , #selector:hover{
  position:absolute;
  top:0;
  left:0;
  width:200%;
  height:200%;
  background-color:#888888;
}

#status {
  margin-bottom:1em;
}


.feedback_button {
  text-align:center;
  cursor:default;
  float:left;
  font-size:2em;
  width:50%;
  float:left;
}

.feedback_button:hover {
  text-transform:uppercase;
}

.recom_wrapper {
  padding: 0 0.75em;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.feedback_wrapper {
  padding: 0 0.75em;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  
}

@media screen and (min-width: 35em) {
  .feedback_wrapper {
    width: 33.3333333%;
    float:right;
  }
  .recom_wrapper {
    width: 66.6666666%;
    float:left;
  }
  
  #element:hover ~ #selector , #selector:hover{
  position:absolute;
  top:0;
  right:0;
  width:400%;
  height:300%;
  background-color:#888888;
  }
}